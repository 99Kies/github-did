{
  "name": "@transmute/github-did",
  "version": "0.1.2",
  "description": "Github DID",
  "bin": {
    "ghdid": "./src/index.js"
  },
  "scripts": {
    "start": "npm run ghdid",
    "ghdid": "node ./src/index.js",
    "test": "jest --coverage -- ",
    "did:create_document": "node ./scripts/did/create_document.js",
    "did:sign": "node ./scripts/did/verify.js",
    "did:verify": "node ./scripts/did/verify.js",
    "did:check": "node ./scripts/did/checkDIDs.js",
    "did:resolver": "node ./scripts/did/resolver.js",
    "did:resolver:local": "node ./scripts/did/localResolver.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/transmute-industries/github-did.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/transmute-industries/github-did/issues"
  },
  "homepage": "https://github.com/transmute-industries/github-did#readme",
  "dependencies": {
    "@transmute/openpgpsignature2019": "^0.1.1",
    "@transmute/transmute-did": "^1.0.2-0",
    "fs-extra": "^7.0.1",
    "node-fetch": "^2.3.0",
    "openpgp": "^4.4.3",
    "shelljs": "^0.8.3",
    "uuid": "^3.3.2",
    "vorpal": "^1.12.0",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "jest": "^23.6.0"
  },
  "jest": {
    "setupFiles": [
      "./setupJest.js"
    ],
    "collectCoverageFrom": [
      "src/ghdid.js"
    ],
    "testPathIgnorePatterns": [
      "__fixtures__"
    ]
  }
}
